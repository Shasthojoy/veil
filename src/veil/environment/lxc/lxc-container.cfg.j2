{% if is_precise %}


lxc.utsname = {{ name }}
lxc.network.type = veth
lxc.network.link = {{ lan_interface }}
lxc.network.flags = up
lxc.network.hwaddr = {{ mac_address }}
lxc.devttydir = lxc
lxc.tty = 4
lxc.pts = 1024
lxc.rootfs = /var/lib/lxc/{{ name }}/rootfs
lxc.mount = /var/lib/lxc/{{ name }}/fstab
lxc.arch = amd64
lxc.cap.drop = sys_module mac_admin
lxc.pivotdir = lxc_putold
{% if memory_limit %}
lxc.cgroup.memory.limit_in_bytes = {{ memory_limit }}
{% endif %}
{% if cpu_share %}
# default to 1024
lxc.cgroup.cpu.shares = {{ cpu_share }}
{% endif %}
# uncomment the next line to run the container unconfined:
#lxc.aa_profile = unconfined
lxc.cgroup.devices.deny = a
# Allow any mknod (but not using the node)
lxc.cgroup.devices.allow = c *:* m
lxc.cgroup.devices.allow = b *:* m
# /dev/null and zero
lxc.cgroup.devices.allow = c 1:3 rwm
lxc.cgroup.devices.allow = c 1:5 rwm
# consoles
lxc.cgroup.devices.allow = c 5:1 rwm
lxc.cgroup.devices.allow = c 5:0 rwm
#lxc.cgroup.devices.allow = c 4:0 rwm
#lxc.cgroup.devices.allow = c 4:1 rwm
# /dev/{,u}random
lxc.cgroup.devices.allow = c 1:9 rwm
lxc.cgroup.devices.allow = c 1:8 rwm
lxc.cgroup.devices.allow = c 136:* rwm
lxc.cgroup.devices.allow = c 5:2 rwm
# rtc
lxc.cgroup.devices.allow = c 254:0 rwm
#fuse
lxc.cgroup.devices.allow = c 10:229 rwm
#tun
lxc.cgroup.devices.allow = c 10:200 rwm
#full
lxc.cgroup.devices.allow = c 1:7 rwm
#hpet
lxc.cgroup.devices.allow = c 10:228 rwm
#kvm
lxc.cgroup.devices.allow = c 10:232 rwm


{% else %}


# Template used to create this container: /usr/share/lxc/templates/lxc-ubuntu
# Parameters passed to the template:
# For additional config options, please look at lxc.conf(5)

# Common configuration
lxc.include = /usr/share/lxc/config/ubuntu.common.conf

# Container specific configuration
lxc.rootfs = /var/lib/lxc/{{ name }}/rootfs
lxc.mount = /var/lib/lxc/{{ name }}/fstab
lxc.utsname = {{ name }}
lxc.arch = amd64

# Network configuration
lxc.network.type = veth
lxc.network.flags = up
lxc.network.link = {{ lan_interface }}
lxc.network.hwaddr = {{ mac_address }}

lxc.start.auto = 1
lxc.start.delay = 5
lxc.start.order = {{ start_order }} # higher value means starts earlier

{% if memory_limit %}
lxc.cgroup.memory.limit_in_bytes = {{ memory_limit }}
{% endif %}

{% if cpu_share %}
# default to 1024
lxc.cgroup.cpu.shares = {{ cpu_share }}
{% endif %}


{% endif %}